<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context=".activities.MainActivitySeller">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/home_toolbar"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textFontWeight="20" />





            <Button

                android:id="@+id/btn_create_post"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/create_post"
                android:layout_toStartOf="@+id/btn_home_orders"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="16dp"

                android:backgroundTint="@color/white"

                />


            <Button
                android:id="@+id/btn_home_orders"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_order"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/tv_posts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Posts"
        android:layout_below="@id/home_toolbar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="14dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="16sp"


        />

    <View
        android:id="@+id/bar_post_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_posts_title"
        android:background="@color/LightGrey"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/tv_home_no_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_items_list"
        android:text="No items to show"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/home_items_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_below="@id/bar_post_title" />


</RelativeLayout>