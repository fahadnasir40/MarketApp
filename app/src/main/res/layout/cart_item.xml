<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:id="@+id/item_cart_img"

            android:background="@color/LightSkyBlue"
            android:layout_margin="8dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_cart_name"
            android:text="Redmi Note 8 Pro"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_margin="2dp"
            android:fontFamily="@font/roboto"
            android:layout_toEndOf="@id/item_cart_img"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_cart_price"
            android:layout_alignParentEnd="true"
            android:text="Rs. 850"

            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            android:textFontWeight="100"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:layout_below="@id/item_cart_name"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_cart_quantity"
            android:text="Quantity: 1 Item"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:layout_below="@id/item_cart_name"
            android:layout_toEndOf="@id/item_cart_img" />

        <Spinner
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/item_cart_quantity"
            android:layout_marginStart="16dp"
            android:layout_below="@id/item_cart_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_cart_delivery_time"
            android:text="Expected Delivery Time: 7 days"
            android:textSize="12sp"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:layout_below="@id/item_cart_quantity"
            android:layout_toEndOf="@id/item_cart_img" />

        <Button
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_above="@id/item_cart_price"
            android:background="@drawable/ic_close_black_24dp"
            android:alpha="0.7"
            android:layout_marginEnd="16dp"

            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentEnd="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrey"
            android:layout_below="@id/item_cart_delivery_time"
            android:layout_margin="8dp"/>
    </RelativeLayout>


